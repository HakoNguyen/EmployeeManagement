    // Tạo chức vụ
    public Position addPosition(Position position) {
        // Kiểm tra và thiết lập mối quan hệ với Department nếu cần
        if (position.getDepartmentPositions() != null && position.getDepartmentPositions().isEmpty()) {
            throw new RuntimeException("DepartmentPosition cannot be null or empty");
        }

        // Lưu vị trí
        return positionRepository.save(position);
    }

    // Lấy tất cả chức vụ
    public List<Position> getAllPositions() {
        return positionRepository.findAll();
    }

